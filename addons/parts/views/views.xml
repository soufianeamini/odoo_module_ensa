<?xml version="1.0"?>
<odoo>
	<!-- Records -->
	<record id="commande_model_action" model="ir.actions.act_window">
		<field name="name">Commande action</field>
		<field name="res_model">commande_model</field>
		<field name="view_mode">list,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create Command
			</p>
		</field>
	</record>

	<record id="commande_tree_view" model="ir.ui.view">
		<field name="name">commande.tree.view</field>
		<field name="model">commande_model</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="total"/>
			</tree>
		</field>
	</record>

	<!-- Menu items -->
	<menuitem id="commandes_menu" name="Gestion commandes" sequence="10"/>
	<menuitem id="commandes_menu_items" name="Commandes"
		parent="commandes_menu" action="commande_model_action"/>
</odoo>
